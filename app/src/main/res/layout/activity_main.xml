<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.github.florent37.shapeofview.shapes.ArcView
        android:layout_width="wrap_content"
        android:layout_height="142dp"
        android:elevation="4dp"
        app:shape_arc_cropDirection="outside"
        app:shape_arc_height="20dp"
        app:shape_arc_position="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CED5E6" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="SELECCIONA UNA ACCIÃ“N"
                android:textColor="#363445"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5sp"
                android:src="@drawable/fondo" />
        </LinearLayout>
    </com.github.florent37.shapeofview.shapes.ArcView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="20sp"
       android:background="@drawable/fondo_button"
       android:textColor="#FFF"
       android:textStyle="bold"
       android:text="CREAR CUENTA DE AHORROS"
       android:id="@+id/registrar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@drawable/fondo_button2"
        android:text="CONSIGNAR"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:id="@+id/consignar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@drawable/fondo_button3"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:text="RETIRAR"
        android:id="@+id/retirar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@drawable/fondo_button4"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:text="CONSULTAR"
        android:id="@+id/consultar"/>
    </LinearLayout>

</LinearLayout>